<?xml version='1.0' encoding='UTF-8' ?>

<addon id="DrawingSmartPen" xmlns="http://icplayer.com" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://icplayer.com ../../tools/addon.xsd">
	<model>
        <property name="SmartPen" displayName="LearnPen" type="boolean" />
        <property name="Colors" type="text" />
        <property name="Thickness" type="text" />
        <property name="Opacity" type="text" />

        <property name="Squeeze limits" type="string" />
        <property name="Squeeze limits interpretation" type="{Separately, Together}" />
        <property name="Pressure limits" type="string" />

        <property name="Events" type="list">
            <property name="Sensor" type="string" />
            <property name="Reaction scope" type="string" />
            <property name="Item" type="string" />
            <property name="Value" type="string" />
            <property name="Score" type="string" />
        </property>

        <property name="Mirror" type="boolean" />
        <property name="Background color" type="string" />
	</model>
</addon>